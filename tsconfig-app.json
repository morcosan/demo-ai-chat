{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",
		"typeRoots": ["./types"],
		"paths": {
			// Webstorm bug:
			// Aliases are missing code highlighting if tsconfig file is inside a folder
			// Highlight must be manually configured as `tsconfig*.json` in `Settings | File Types | TypeScript Config`
			"@api/*": ["./src-api/*"],
			"@app/*": ["./src-app/*"],
			"@ds/*": ["./src-ds/*"]
		},

		/* Linting */
		"strict": true
	},
	"include": ["./src-app", "./src-api", "./types", "./tailwind.config.ts"]
}
