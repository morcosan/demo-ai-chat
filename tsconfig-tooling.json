{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,

		/* Linting */
		"strict": true
	},

	// Webstorm bug: It must import .tooling/types again
	"include": [
		"./.storybook/main.ts",
		"./.storybook/vite.config.ts",
		"./.tooling",
		"./.tooling/types",
		"./src-ds/@types",
		"./src-utils/@types",
		"./tailwind.config.ts",
		"./vite.config.ts"
	]
}
