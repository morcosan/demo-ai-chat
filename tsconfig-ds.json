{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react",
		"paths": {
			// Webstorm bug:
			// Aliases are missing code highlighting if tsconfig file is inside a folder
			// Highlight must be manually configured as `tsconfig*.json` in `Settings | File Types | TypeScript Config`
			"@ds/*": ["./src-ds/*"],
			"@utils/*": ["./src-utils/*"]
		},

		/* Linting */
		"strict": true
	},
	"include": ["./src-ds", "./src-utils", "./tailwind.config.ts", "./.storybook/preview.tsx"]
}
